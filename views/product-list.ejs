<%- include('includes/head.ejs') %>

    <body>
        <%- include('includes/navigation.ejs') %>

            <main>
                <h1><%= (admin) ? 'Admin product list' : 'Products list' %></h1>
                <% if(products.length){ %>
                    <div class=" wrapper_product">
                        <% for(let product of products) { %>
                            <div class=" cart">
                                <div class="product">
                                    <div>

                                        <img src="<%= product.image %>"  class="" alt="">
                                    </div>
                                    <h3>
                                        <%= product.title %>
                                    </h3>
                                    <div>Price : <%= product.price%> $</div>
                                    <p><%= product.description%></p>
                                    <% if(admin) { %>   
                                   
                                        <div class="my-2 text-center d-flex  justify-content-center ">
                                            <a href="/products/edit/<%= product.id%>" class="btn btn-primary mx-2">Edit</a>
                                            <!-- <a href="/products/delete/<%= product.id%>" class="btn btn-primary mx-2">Delete</a> -->
                                            <!-- <%- include('includes/CartButton.ejs', {product : product}) %> -->

                                            <form action="/products/delete" method="post">
                                                <input type="hidden" name="productId" value="<%= product.id %>">
                                                <button type="submit" class="btn btn-danger mx-2">Delete</button>                                            
                                            </form>
                                        </div>

                                   <% } else if(!admin) { %>
                                    <div class="my-2 text-center d-flex  justify-content-center ">
                                        <a href="/product/details/<%= product.id%>" class="btn btn-primary mx-2"> View Details</a>
                                        <%- include('includes/CartButton.ejs', {product : product}) %>
                                    </div>
                                    <%} %>
                                </div>
                            <% } %>
                    </div>
                    <% } else {%>
                        <div>No products available...</div>
                        <%} %>
            </main>
    </body>

    </html>